champion galio
sprite galio.jpg

attributes:
  health 2744
  armor 95.4
  mr 76.6
  ms 385

behavior:
  if w.active or ready w and closest_dist < w.range + 150 then
    range w
    self.target = closest_enemy
  else
    range q
    movement passive
  end

abilities:
  color 0.7, 0.7, 1.0

  aa:
    cd 1.2
    range 150
    damage 360
    cast melee_aa

  q:
    cd 6.3
    damage 280
    range 825
    size 150
    speed 1400
    persist_time 2
    tick 0.5
    cast ranged
    use:
      proj = missile from pos to cast.pos
      proj.next = aoe
      spawn proj
    hit:
      damage magic

  w:
    cd 12.6
    damage 270
    range 350
    size 350
    deploy_time 1
    cast ranged
    use:
        proj = aoe follow self
        active = true
        delay deploy_time active = false
        spawn proj
    hit:
      effect stun 1.5s
      damage magic

  e:
    cd 6.3
    damage 340
    range 650
    size 320
    cast ranged
    use:
      proj = aoe follow self tick 0
      spawn proj
      effect on self dash to cast.pos speed 2300
    hit:
      proj.despawn = true
      self:del_effect("dash")
      damage magic
      effect airborne 0.75s

  r:
    cd 144
    damage 320
    range 5500
    size 650
    deploy_time 2
    cast:
      for _, ally in pairs(in_range_list(self, allies, range)) do
        if in_range(ally, enemies, size / 4) >= clamp(#enemies-1, 1, 3) then
          return { pos = ally.pos }
        end
      end
    use:
      local ch = deploy_time / 2
      effect on self fly duration deploy_time channel ch on finish do
        pos = cast.pos
      end
      proj = aoe at cast.pos
      spawn proj
    hit:
      damage magic
      effect airborne 1s