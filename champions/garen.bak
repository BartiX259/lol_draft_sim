champion garen
sprite garen.jpg

attributes:
  health 2566
  armor 167.9
  mr 80.6
  ms 391

behavior:
    if q.active or closest_dist < 200 then
      self.target = closest_enemy
      range 100
    else
      range 600
      movement peel
    end

abilities:
  aa:
    damage 183  -- Base attack damage
    cd 0.89  -- Attack speed
    range 175
    cast melee_aa

  q:
    cd 6.4
    range 400
    cast ranged
    use:
      active = true
      effect on self speed 30% 3s on finish active = false

  q_hit:
    range 200
    damage 241.5  -- (60/85/110 + 0.6 bonus attack damage)
    cast ranged if q
    use:
        damage physical
        effect silence 1.5s

  e:
    cd 7.2
    damage 128.9 -- per tick
    range 150
    size 300
    duration 3
    color 0.9, 0.7, 0.5
    cast ranged
    use:
      proj = aoe follow self hard_follow true
      local num_ticks = 8
      local current_proj = proj
      for i = 1, num_ticks - 1 do
        current_proj.next = aoe follow self hard_follow true
        current_proj = current_proj.next
      end
      spawn proj
    hit:
      damage physical

  r:
    cd 80
    damage 570  -- (300 + 0.2 bonus attack damage + 0.1 max health)
    range 400
    color 1, 1, 1
    size 200
    deploy_time 0.5
    cast:
       if self.target and self.target.pos:distance(pos) < range and self.target.health < damage then
        return { target = self.target }
       end
       return nil
    use:
        proj = aoe follow cast.target colliders nil on impact do -- visual
            damage true
        end
        spawn proj
